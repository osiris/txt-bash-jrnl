DIR="$PWD/.jrnl"

[[ ! -z "$1" ]] && DIR="$1"
[[ ! -d "$DIR" ]] && exit 1

find "$DIR" -type f -iname '*.txt' | while read F
do

  D=$(dirname "$F")
  FILE=$(basename "$F")
  
  SS=$(echo "$FILE" | egrep -o "[0-9]+" | cut -c 5-6)
  [[ -z "$SS" ]] && SS='00'
  [[ "$SS" = "0" ]] && SS='00'

  HEAD_TIME=$(head -1 "$F" | cut -c 12-16 | egrep -o "[0-9]{2}:[0-9]{2}")
  HM=$(echo "$HEAD_TIME" | tr -d ':')

  NEW_FILE=$(printf "%6s.txt" "$HM$SS")

  [[ "$FILE" = "$NEW_FILE" ]] && continue

  mv -vi "$F" "$D/$NEW_FILE"

done

